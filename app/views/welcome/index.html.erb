<main>

 <div class='container p-3 my-3 border'>
    <div class="card">
        <h1>Look up definitions quickly from the Oxford API!</h1>

        <div class="container p-3 my-3 border">
            <%= form_tag("/word", method: "post") do %>
                <%= label_tag(:q, "") %>
                <%= text_field_tag(:q) %>
                <%= submit_tag("Search") %>
            <% end %>
        </div>
    </div>
 </div>

</main>

